<table>
  <thead>
    <tr>
      <td>投票</td>
      <td>餐廳名稱</td>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= link_to '投票', vote_restaurant_path(restaurant), method: 'post', data: {confirm: '確定投票?'}%></td>
