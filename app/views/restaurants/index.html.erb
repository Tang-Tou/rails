      <td><%= link_to '編輯', edit_restaurant_path(restaurant) %></td>
      <td><%= link_to '刪除', restaurant_path(restaurant), method: 'delete', data: {confirm: '確定刪除?'}  %></td>
    </tr>
    <% end %>
  </tbody>
</table>


